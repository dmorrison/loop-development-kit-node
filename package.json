{
  "name": "@oliveai/ldk",
  "version": "1.3.1",
  "description": "The Loop Development Kit for Sidekick.",
  "author": "Olive",
  "copyright": "Copyright 2020 Olive",
  "repository": {
    "type": "git",
    "url": "https://github.com/open-olive/loop-development-kit-node.git"
  },
  "license": "MIT",
  "keywords": [
    "olive",
    "sidekick",
    "loop",
    "loops",
    "loop-development-kit",
    "ldk",
    "sdk"
  ],
  "engines": {
    "node": ">=10 <15"
  },
  "main": "dist/index.js",
  "bin": "./dist/bin/build.js",
  "scripts": {
    "build": "rm -rf dist && tsc && git update-index --chmod=+x dist/bin/build.js",
    "doc": "rm -rf docs && mkdir -p docs && ./node_modules/.bin/typedoc --options typedoc.json",
    "lint": "./node_modules/.bin/eslint . --ext .js,.ts",
    "prettier-all": "prettier --write '**/*.{js,ts}'",
    "protoc": "npm run protoc:download && npm run protoc:clear && npm run protoc:gen && npm run protoc:ts && npm run protoc:fixes",
    "protoc:clear": "rm -rf src/grpc",
    "protoc:download": "git subtree pull --prefix src/shared https://github.com/open-olive/loop-development-kit-shared.git master",
    "protoc:gen": "grpc_tools_node_protoc --proto_path=src/shared/proto --js_out=import_style=commonjs,binary:src/grpc --plugin=protoc-gen-grpc=`which grpc_tools_node_protoc_plugin` --grpc_out=grpc_js:src/grpc src/shared/proto/*.proto",
    "protoc:fixes": "ts-node scripts/protoFixes.ts",
    "protoc:ts": "grpc_tools_node_protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --proto_path=src/shared/proto  --ts_out=generate_package_definition:src/grpc src/shared/proto/*.proto",
    "test": "jest",
    "test-coverage": "jest --collectCoverage",
    "test-watch": "jest --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build && npm run doc && git add docs && git add dist"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@grpc/grpc-js": "1.1.6",
    "@types/google-protobuf": "3.7.3",
    "commander": "6.1.0",
    "google-protobuf": "3.13.0",
    "pkg": "4.4.9"
  },
  "devDependencies": {
    "@types/jest": "26.0.13",
    "@types/node": "14.10.0",
    "@typescript-eslint/eslint-plugin": "4.1.0",
    "@typescript-eslint/parser": "4.1.0",
    "eslint": "7.8.1",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jsdoc": "30.4.0",
    "grpc-tools": "1.9.1",
    "grpc_tools_node_protoc_ts": "4.1.4",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "lint-staged": "10.3.0",
    "prettier": "2.1.1",
    "ts-jest": "26.3.0",
    "ts-node": "9.0.0",
    "typedoc": "0.17.8",
    "typedoc-plugin-pages": "1.0.1",
    "typescript": "4.0.2"
  }
}

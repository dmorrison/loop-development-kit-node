{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "rootDir": "src",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true
  },
  "exclude": ["node_modules", "dist", "docs", "scripts"]
}
